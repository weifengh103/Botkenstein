    btPRZ = window['btPRZ']
    btNRZ = window['btNRZ']

    btPJ1 = window['btPJ1']
    btNJ1 = window['btNJ1']
    btPJ2 = window['btPJ2']
    btNJ2 = window['btNJ2']
    btPJ3 = window['btPJ3']
    btNJ3 = window['btNJ3']
    btPJ4 = window['btPJ4']
    btNJ4 = window['btNJ4']
    btPJ5 = window['btPJ5']
    btNJ5 = window['btNJ5']
    btPJ6 = window['btPJ6']
    btNJ6 = window['btNJ6']

